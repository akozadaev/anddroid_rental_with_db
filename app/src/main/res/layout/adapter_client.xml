<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView android:id="@+id/textId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Номер клиента"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ФИО клиента"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView android:id="@+id/textPhones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Телефон клиента"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView android:id="@+id/textIndividualDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Скидка (%)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>