<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView android:id="@+id/textId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Номер инструмента"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название инструмента"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView android:id="@+id/textRentalFees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Стоимость аренды в сутки"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView android:id="@+id/textRentStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статус аренды"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>